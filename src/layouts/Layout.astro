---
import "../styles/global.css";
import Header from "@/components/Header.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";
import { Font } from "astro:assets";
---

<!doctype html>
<html lang="en">
	<head>
		<Font cssVariable="--font-open-sans" preload />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta charset="UTF-8" />
	</head>
	<body
		class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 bg-neutral-950 px-6 md:px-10 py-8 text-sm text-neutral-400 md:gap-20 md:py-16"
	>
		<Header />
		<BlurCircle position="top" color={theme.colors.blur.top} />
		<BlurCircle position="bottom" color={theme.colors.blur.bottom} />
		<slot />
	</body>
</html>
